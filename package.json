{
  "name": "biodiversity-net-gain-service",
  "type": "module",
  "private": false,
  "author": "DEFRA",
  "license": "OGL-UK-3.0",
  "scripts": {
    "postinstall": "npm run lerna:bootstrap",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lint": "standard",
    "unit-test": "jest --runInBand",
    "test": "npm run lint && npm run unit-test",
    "docker:build": "docker-compose -f docker/services.build.yml build",
    "docker:build-dev-infrastructure": "docker-compose -f docker/infrastructure.development.build.yml build",
    "docker:start": "docker stack deploy -c docker/infrastructure.yml -c docker/services.yml bng",
    "docker:start-dev": "docker stack deploy -c docker/infrastructure.yml -c docker/infrastructure.development.yml -c docker/services.yml bng",
    "docker:start-dev-infrastructure": "docker stack deploy -c docker/infrastructure.yml -c docker/infrastructure.development.yml bng",
    "docker:stop": "docker stack rm bng",
    "docker:start-compose": "docker-compose -f docker/infrastructure.yml -f docker/infrastructure.development.yml -f docker/services.yml up -d",
    "docker:stop-compose": "docker-compose -f docker/infrastructure.yml -f docker/infrastructure.development.yml -f docker/services.yml down"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^28.0.3",
    "eslint": "^8.13.0",
    "eslint-plugin-jest": "^26.1.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "markdownlint-cli": "^0.31.1",
    "standard": "^16.0.4"
  },
  "standard": {
    "env": {
      "node": true,
      "jest": true
    },
    "ignore": [
      "**/public/build/js/*.js",
      "packages/api/webpack.config.cjs",
      ".husky"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true,
      "es6": true,
      "es2021": true
    },
    "ignorePatterns": [
      "**/dist/*.js"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/**/src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      ""
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "projects": [
      "<rootDir>/packages/*"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node",
      "mjs"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest",
      "^.+\\.mjs$": "babel-jest"
    },
    "testRunner": "jest-circus/runner",
    "silent": true
  }
}
