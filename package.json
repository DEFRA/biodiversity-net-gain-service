{
  "name": "biodiversity-net-gain-service",
  "type": "module",
  "private": false,
  "author": "DEFRA",
  "license": "OGL-UK-3.0",
  "scripts": {
    "postinstall": "npm run lerna:bootstrap && ./bin/init-babel-config",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lint": "standard",
    "unit-test": "./bin/run-unit-tests",
    "test": "npm run lint && npm run unit-test",
    "bootstrap-azurite": "node ./packages/azurite-bootstrap-service/src/service.js",
    "docker:build-services": "docker-compose -f docker/services.build.yml build",
    "docker:build-dev-infrastructure": "docker-compose -f docker/infrastructure.development.build.yml build",
    "docker:start-infrastructure": "docker-compose -f docker/infrastructure.yml up -d",
    "docker:start-dev-infrastructure": "docker-compose -f docker/infrastructure.development.yml up -d",
    "docker:start-dev-tools": "docker-compose -f docker/dev-tools.yml up -d",
    "docker:start-services": "docker-compose -f docker/services.yml up -d",
    "docker:stop-infrastructure": "docker-compose -f docker/infrastructure.yml down",
    "docker:stop-dev-infrastructure": "docker-compose -f docker/infrastructure.development.yml down",
    "docker:stop-dev-tools": "docker-compose -f docker/dev-tools.yml down",
    "docker:stop-services": "docker-compose -f docker/services.yml down",
    "docker:stop": "docker-compose -f docker/services.yml -f docker/infrastructure.development.yml -f docker/dev-tools.yml -f docker/infrastructure.yml down"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "babel-jest": "^28.1.1",
    "eslint": "^8.17.0",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.1",
    "lerna": "^5.1.4",
    "markdownlint-cli": "^0.31.1",
    "standard": "^17.0.0"
  },
  "standard": {
    "env": [
      "node",
      "jest"
    ],
    "ignore": [
      "**/public/build/js/*.js",
      "packages/api/webpack.config.cjs",
      ".husky"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true,
      "es6": true,
      "es2021": true
    },
    "ignorePatterns": [
      "**/dist/*.js"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/**/src/**/*.js",
      "<rootDir>/**/*.mjs",
      "<rootDir>/**/ProcessTrustedFile/**/*.js",
      "<rootDir>/**/ProcessUntrustedFile/**/*.js",
      "<rootDir>/**/SignalRNegotiate/**/*.js",
      "!<rootDir>/**/__tests__/**",
      "!<rootDir>/**/__mocks__/**"
    ],
    "coveragePathIgnorePatterns": [
      ""
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "projects": [
      "<rootDir>/packages/*"
    ],
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner",

    "silent": true
  }
}
